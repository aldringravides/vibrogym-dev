<div class="col-md-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { class: "form-horizontal"}) do |f| %>
    <fieldset>
      <legend><%= t(".legend") %></legend>
      <%= render "shared/error", object: f.object %>
      <div class="form-group">
        <%= f.label :email, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.email_field :email, autofocus: true, autocomplete: :off,
          class: "form-control", placeholder: t(".email") %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password, autocomplete: :off,
           class: "form-control", placeholder: t(".password") %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> <%= t ".remember_me" %>
              </label>
            </div>
          <% end -%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit t(".legend"), class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>